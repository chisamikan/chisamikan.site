<article class="scroll-section" id="contact">
  <div class="scroll-section-box">
    <h2>Contact<small>お問い合わせ</small></h2>
    <form class="scroll-section-box-txt" name="contact" method="POST" netlify>
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="name"
          placeholder="例：山田　太郎"
          required
        />
        <label>お名前</label>
        <span class="focus-line"></span>
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="email"
          name="email"
          placeholder="例：xxx@xxx.jp"
          required
        />
        <label>メールアドレス</label>
        <span class="focus-line"></span>
      </div>
      <div class="form-group">
        <textarea
          class="form-control"
          rows="5"
          name="message"
          required
        ></textarea>
        <label>お問い合わせ内容</label>
        <span class="focus-line textarea"></span>
      </div>
      <div class="form-group checkbox">
        <label
          ><input type="checkbox" name="privacy" required /><span
            class="checkbox-material"
            ><span class="check"></span></span
          ><a href="/privacy" target="_blank">プライバシーポリシー</a
          >に同意する</label
        >
      </div>
      <div class="text-center mt-3">
        <button type="submit" class="btn">送信</button>
      </div>
    </form>
  </div>
