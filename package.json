{
  "name": "chisamikan.site",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "run-p build:*",
    "build:css": "sass src/scss/style.scss src/style.css && postcss src/style.css --dir dist --config postcss.config.js && rimraf src/style.css",
    "build:ejs": "node rss-parser.js && ejs-cli --base-dir src/ejs/pages **/**.ejs --out dist/ --options site.json",
    "build:js": "./node_modules/.bin/babel src/js --out-dir src/js/babel && uglifyjs src/js/babel/*.js -o dist/bundle.js && rimraf src/js/babel",
    "build:imagemin": "rimraf dist/images && mkdirp dist/images && node .imagemin.mjs && cpx \"src/images/favicon.ico\" dist/images",
    "build:font": "cpx \"src/scss/fonts/**\" dist/fonts",
    "test": "browser-sync start --config bs-config.js",
    "watch": "run-p build:* && run-p test watch:*",
    "watch:css": "chokidar \"src/scss/**.scss\" -c \"npm run build:css\"",
    "watch:ejs": "chokidar \"src/ejs/**/*.ejs\" \"-c npm run build:ejs\"",
    "watch:js": "chokidar \"src/js/*.js\" \"-c npm run build:js\"",
    "watch:imagemin": "chokidar \"src/images\" \"-c npm run build:imagemin\"",
    "upgrade-interactive": "npm-check --update"
  },
  "author": "Chisamikan",
  "license": "UNLICENSED",
  "private": true,
  "browserslist": [
    "last 2 versions and >1% in JP"
  ],
  "devDependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/core": "^7.13.16",
    "@babel/preset-env": "^7.13.15",
    "@fullhuman/postcss-purgecss": "^4.0.3",
    "autoprefixer": "^10.2.5",
    "browser-sync": "^2.26.14",
    "chokidar-cli": "^2.1.0",
    "cpx": "^1.5.0",
    "css-mqgroup": "^7.1.0",
    "cssnano": "^5.0.1",
    "ejs-cli": "^2.2.1",
    "html-minifier": "^4.0.0",
    "imagemin": "^8.0.0",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^9.0.0",
    "mkdirp": "^1.0.4",
    "npm-check": "^5.9.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.12",
    "postcss-cli": "^8.3.1",
    "postcss-flexbugs-fixes": "^5.0.2",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rss-parser": "^3.12.0",
    "sass": "^1.32.11",
    "stylelint": "^13.12.0",
    "stylelint-config-recess-order": "^2.4.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.3.0",
    "stylelint-no-unsupported-browser-features": "^4.1.4",
    "stylelint-prettier": "^1.2.0",
    "stylelint-scss": "^3.19.0",
    "svgo": "^2.3.0",
    "uglify-es": "^3.3.9"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "nodemailer": "^6.5.0"
  }
}
