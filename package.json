{
  "name": "chisamikan.site",
  "version": "1.0.0",
  "description": "千紗みかんウェブサイト",
  "main": "index.js",
  "scripts": {
    "build:ejs": "node rss-parser.js && ejs-cli --base-dir src/ejs/pages **/**.ejs --out src --options site.json && html-minifier --input-dir src --output-dir dist -c html-minifier.json --file-ext html && rimraf src/*.html",
    "build:js": "./node_modules/.bin/babel src/js --out-dir src/js/babel && uglifyjs src/js/babel/*.js -o dist/bundle.js && rimraf src/js/babel",
    "build:imagemin": "node .imagemin.mjs && cpx \"src/images/favicon.ico\" dist/images",
    "build:icons": "mkdirp dist/icons && fantasticon src/icons -o dist/icons --normalize && rimraf dist/icons/icons.html dist/icons/icons.ts dist/icons/icons.json && postcss -r dist/icons/icons.css",
    "build:css": "postcss src/css/*.css -d dist",
    "build": "rimraf dist && run-s build:*",
    "test": "browser-sync start --config bs-config.js",
    "start:css": "chokidar \"src/css/**.css\" -c \"yarn build:css\"",
    "start:ejs": "chokidar \"src/ejs/**/*.ejs\" \"-c yarn build:ejs\"",
    "start:js": "chokidar \"src/js/*.js\" \"-c yarn build:js\"",
    "start:imagemin": "chokidar \"src/images\" \"-c yarn build:imagemin\"",
    "start": "run-s build:* && run-p test start:*"
  },
  "author": "Chisamikan",
  "license": "UNLICENSED",
  "private": true,
  "browserslist": [
    "last 2 versions and >1% in JP"
  ],
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.14.8",
    "@fullhuman/postcss-purgecss": "^4.0.3",
    "autoprefixer": "^10.3.4",
    "browser-sync": "^2.27.5",
    "chokidar-cli": "^2.1.0",
    "core-js": "3",
    "cpx2": "^4.0.0",
    "cssnano": "^5.0.7",
    "ejs-cli": "^2.2.1",
    "fantasticon": "^1.2.2",
    "html-minifier": "^4.0.0",
    "imagemin": "^8.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^9.0.0",
    "mkdirp": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-import": "^14.0.2",
    "postcss-nested": "^5.0.6",
    "postcss-nested-ancestors": "^2.0.0",
    "postcss-nesting": "^8.0.1",
    "postcss-simple-vars": "^6.0.3",
    "postcss-sort-media-queries": "^3.11.12",
    "prettier": "^2.3.2",
    "purgecss": "^4.0.3",
    "rimraf": "^3.0.2",
    "rss-parser": "^3.12.0",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recess-order": "^2.4.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.4.0",
    "stylelint-no-unsupported-browser-features": "^5.0.1",
    "stylelint-prettier": "^1.2.0",
    "uglify-es": "^3.3.9"
  },
  "dependencies": {
    "tailwindcss": "^2.2.15"
  }
}
