{
  "name": "chisamikan.site",
  "version": "1.0.0",
  "description": "千紗みかんウェブサイト",
  "main": "index.js",
  "scripts": {
    "build:ejs": "node rss-parser.js && ejs-cli --base-dir src/ejs/pages '**/**.ejs' --out dist/temp --options site.json && html-minifier --input-dir dist/temp --output-dir dist -c html-minifier.json --file-ext html && rimraf 'dist/temp'",
    "build:js": "babel src/js --out-dir src/js/babel && uglifyjs 'src/js/babel/*.js' -o dist/bundle.js && rimraf src/js/babel",
    "build:imagemin": "node .imagemin.mjs && cpx \"src/images/favicon.ico\" dist/images",
    "build:icons": "mkdirp dist/icons && fantasticon src/icons -o dist/icons --normalize && rimraf dist/icons/icons.html dist/icons/icons.ts dist/icons/icons.json && postcss -r dist/icons/icons.css",
    "build:css": "tailwindcss -i ./src/css/style.css -o ./dist/style.css --postcss --minify",
    "build": "rimraf dist && run-s 'build:*'",
    "test": "browser-sync start --config bs-config.js",
    "start:css": "chokidar \"src/css/**.css\" -c \"yarn build:css\"",
    "start:ejs": "chokidar \"src/ejs/**/*.ejs\" \"-c yarn build:ejs && yarn build:css\"",
    "start:js": "chokidar \"src/js/*.js\" \"-c yarn build:js\"",
    "start:imagemin": "chokidar \"src/images\" \"-c yarn build:imagemin\"",
    "start": "run-s 'build:*' && run-p test 'start:*'"
  },
  "author": "Chisamikan",
  "license": "UNLICENSED",
  "private": true,
  "browserslist": [
    "> 0.5% in JP, not dead",
    "not IE 11"
  ],
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.3",
    "@babel/preset-env": "^7.20.2",
    "autoprefixer": "^10.4.14",
    "browser-sync": "^2.29.1",
    "chokidar-cli": "^3.0.0",
    "core-js": "3.29.1",
    "cpx2": "^4.2.2",
    "ejs-cli": "^2.2.3",
    "fantasticon": "^1.2.3",
    "html-minifier": "^4.0.0",
    "imagemin": "^8.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.1",
    "mkdirp": "^2.1.6",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-aspect-ratio-polyfill": "^2.0.0",
    "postcss-cli": "^10.1.0",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-import": "^15.1.0",
    "postcss-sort-media-queries": "^4.3.0",
    "prettier": "^2.8.7",
    "prettier-plugin-tailwindcss": "^0.2.5",
    "rimraf": "^4.4.1",
    "rss-parser": "^3.12.0",
    "stylelint": "^15.3.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recess-order": "^4.0.0",
    "stylelint-config-standard": "^31.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.7.0",
    "stylelint-no-unsupported-browser-features": "^6.1.0",
    "stylelint-prettier": "^3.0.0",
    "uglify-js": "^3.17.4"
  },
  "dependencies": {
    "tailwindcss": "^3.2.7"
  }
}
